<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/f_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="100dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/list_View_title"
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="19dp"
                android:layout_marginBottom="30dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="我是标题"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/list_View_author"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="9dp"
                android:text="演唱者"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@+id/list_View_title" />

            <TextView
                android:id="@+id/list_View_album"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="31dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="专辑"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="8dp"
                android:layout_height="9dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="34dp"
                android:layout_toEndOf="@+id/list_View_author"
                android:text="——"
                android:textSize="5dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>